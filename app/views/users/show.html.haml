.container
  .row
    #mainbar.span9
      %section#profile.box
        .profile-wrap
          .profile-inner
            .avatar
              = link_to gravatar_for(@user)
            .info
              - if !!@user.profile
                = render @user
              - else
                %h1
                  = @user.username
                  %small= "@#{@user.username}"

          - if @user == current_user
            %footer
              = link_to t('.edit_profile'), settings_profile_path, :class => 'btn'
      %section#topics.box.no-padding
        %table.item-list
          %tbody
            = render :partial => 'topics/topic', :collection => @topics
    #sidebar.span3
      %section.box
        %header= t('.user_status')
        %ul
          %li= t ".topics_count", :count => @topics_count
          %li= t ".replies_count", :count => @replies_count
