%tr.reply{:id => reply.anchor}
  %td.avatar= link_to gravatar_for(reply.user), reply.user
  %td.content
    %article.fix-header
      %header.clearbox
        .left
          = link_to_person reply.user
          - if reply.user.username != reply.user.profile.name
            %span= reply.user.profile.name
        .right
          = format_time reply.created_at
          - if reply.edited?
            = t('updated_at')
            = format_time reply.updated_at
      ~ markdown reply.content
